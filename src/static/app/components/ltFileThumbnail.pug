img.img-fluid.img-thumbnail(
  ng-src='{{$ctrl.thumbnailUrl}}',
  style='max-height: 100%; cursor: zoom-in',
  ng-click='$ctrl.dialogShown = true'
  ng-animate-swap='$ctrl.thumbnailUrl')

.modal(
  style='display: block; cursor: zoom-out; background: rgba(0, 0, 0, 0.5)',
  ng-if='$ctrl.dialogShown',
  ng-click='$ctrl.dialogShown = false')
  .modal-dialog(style='max-width: 90%; max-height: 90%; overflow-y: scroll')
    .modal-content
      .modal-body
        img.img-fluid(ng-src='{{$ctrl.imageUrl}}', style='margin: auto')
